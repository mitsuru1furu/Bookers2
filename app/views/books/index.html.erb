<div class="container">
	<div class="row">
	<div><% if @book.errors.any? %>
  					<div id="error_explanation" style="color:red;">
    					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    					<ul>
    						<% @book.errors.full_messages.each do |msg| %>
      						<li><%= msg %></li>
    						<% end %>
    						<% end %>
    					</ul>
  					</div>
  				</div>
					<p id="notice" style="color:green;"><%= notice%></p>
	
		<%= render 'books/book', books: @books %>
	<div class="col-xs-9">
	   <h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspin="3"></th>
				</tr>
			</thead>
			<tbody>
				  <% @books.each do |book| %>
				  <tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg,', fallback: "no_image.jpg", size: 40%></td>
					<%= link_to book_path(book.id) do %> 
					<td><%= link_to book.title, book_path(book.id)%></td>
					<% end %>
					<td><%= book.body%></td>
				  <% end %>
				</tr>
			</tbody>
		</table>
	</div>
  </div>
</div>