<div class="container">
					<% if @book.errors.any? %>
  					<div1 id="error_explanation" style="color:red;">
    					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    					<ul>
    						<% @book.errors.full_messages.each do |msg| %>
      						<li><%= msg %></li>
    						<% end %>
    						<% end %>
    					</ul>
  					</div1>
					<p id="notice" style="color:green;"><%= notice%></p>
	<div class="row">
		<div class="col-xs-3">
		  <h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, :fill, 100,100, format: 'jpeg,', fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
   						<th><%= current_user.name %></th>
   					</tr>
   					<tr>
   						<th>introduction</th>
 						<th><%= current_user.introduction %></th>
 					</tr>
 				</tbody>
 			</table>
 			<div class="row">
				<% if current_user.id? %>
				<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
				<% else %>
				<%= link_to "", show_user_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
				<% end %>
			</div>
			<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<%= f.label :title %>
						<%= f.text_field :title, class: "col-xs-12 book_title"%>
					</div >
					<div class="field row">
						<%= f.label :opinion%>
						<%= f.text_area :body, class: "col-xs-12 body_title"%>
					</div>
					<div class="actions row">
						<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12"%>
					</div>
				<% end %>
		</div>

	<div class="col-xs-9">
	   <h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspin="3"></th>
				</tr>
			</thead>
			<tbody>
				  <% @books.each do |book| %>
				  <tr>
				  	<td><%= link_to "/users/#{book.user.id}" do%>
				  		<%=attachment_image_tag book.user,  :profile_image, :fill, 50, 50, format: 'jpeg,', fallback: "no_image.jpg", size: 40%>
				  	<% end %></td>
					
					<td><%= link_to book.title, book_path(book.id)%></td>
					<td><%= book.body%></td>
				  <% end %>
				</tr>
			</tbody>
		</table>
	</div>
  </div>
</div>